.usr {
  display: flex;
flex-direction: column;
align-items: center;
}

.user__avatat {
     width: 200px;
height: 200px;
overflow: hidden;
border-radius: 50%;
margin: 0 70px;
flex-shrink: 0;
 }

   
   .user__table {
     font-weight: 600;
     width: 100%;
   
     td {
       padding-bottom: 15px;
     }
   
     tr:last-child td {
       padding-bottom: 0;
     }
   }
   
   .user__table-title {
     color: rgba($text-color, .3);
   }