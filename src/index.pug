extends ./main.layout.pug

block content

  .welcome-section
    section.hero
      .container.hero__container
        header.header
          a.logo(href="#") АЗ
          .header__menu
            nav.menu
              - var menuItems = ["Обо мне", "Навыки", "Работы", "Отзывы"]
              ul.menu__list
                each item in menuItems
                  li.menu__item 
                    a(href="#").menu__link #{item}
              - var socials = ["insta", "vk", "github", "envelope"]
          .header__socials
            ul.social__list
              each item in socials
                li.social__item
                  a(href="#").social__link
                    +icon(item, "social__icon")
          .hamburger-container
            #hamburger.hamburger
              span.hamburher__plank
              span.hamburher__plank
              span.hamburher__plank
        .userinfo 
          .userinfo__title Личный сайт #[br] веб разработчика 
          .userinfo__name Алексей #[br]  Захаров
        .hero__button-buttons
          button.scroll-down-btn Скролл
    section.about
      .container.about-container
        .about__user
          .user
            .user__avatar
              .user__avatar-style
                +image("content/user.jpg", 'user__avatar-pic')
                - 
                  var userInfo = [
                    ["Проживаю", "Новосибирск"],
                    ["Возраст", "27 лет"],
                    ["Родился", "1 января 1991"],
                  ];
            table.user__data
              each item in userInfo
                tr.user__data-row
                  td.user__data-title #{item[0]}
                  td.user__data-content #{item[1]}
        .about__content  
          .about__desc  Привет, меня зовут
          .about__title Алексей Захаров
          .about__text-info 
            p   Я занимаюсь разработкой современных сайтов и приложений. Мне нравится делать интересные и современные проекты.
          .about__ps Этот сайт я сделал в рамках обучения в Школе онлайн образования LoftSchool. Чуть позже я освежу в нём свой контент. А пока посмотрите, как тут всё классно и красиво!

  .middle-section

    .triangles.triangles_top
      svg(viewBox="0 0 1000 100" preserveAspectRatio="none").triangles__shape.triangles__shape_left
        polygon(points="0,0 0,100 1000,100")
      svg(viewBox="0 0 1000 100" preserveAspectRatio="none").triangles__shape.triangles__shape_right
        polygon(points="0,100 1000,100 1000,0")

    section.values    
      .container  
        .values__wrapper
          .values__title  
            .values__title-text Чем я могу быть полезен вам
            .values__title-content 
              p Этот сайт я сделал в рамках обучения в Школе онлайн образования LoftSchool. Чуть позже я освежу в нём свой контент. А пока посмотрите, как тут всё классно и красиво!
          .values__widget             
            #skills-component
          .values__img
            +image("decor/bag.jpg", 'values__img-pic')
    section.works
      .container.works-containder
        .section-title Мои работы
        .works__content
          #preview-component


    .triangles.triangles__bottom
      svg(viewBox="0 0 1000 100" preserveAspectRatio="none").triangles__shape.triangles__shape_left
        polygon(points="0,0 1000,0 1000,100")
      svg(viewBox="0 0 1000 100" preserveAspectRatio="none").triangles__shape.triangles__shape_right
        polygon(points="0,0 0,100 1000,0")

  .section.reviwes    
    .container
        #slider-component
  footer.footer
    .container.footer-container
      .footer__copyright
        .footer__copyright-col &copy; 2020
        .footer__copyright-author
          .footer__copyright-author-name Алексей Захаров
          .footer__copyright-author-info Личный сайт  веб-разработчика
      .footer__data
        .menu.footer-menu
          - var menuItems = ["Обо мне", "Навыки", "Работы", "Отзывы"]
          ul.menu__list
            each item in menuItems
              li.menu__item.footer-menu__item
                a(href="#").menu__link #{item}
        .footer__data-content
          .footer__data-content-col.footer__data-content-col--thin
            .footer__data-content-about Этот сайт я сделал в рамках обучения в Школе онлайн образования Loftschool
            - var socials = ["insta", "vk", "github", "envelope"]
            .footer__data-social
              ul.social__list
                each item in socials
                  li.social__item.footer-social.social__item--rounded
                    a(href="#").social__link.footer-link
                      +icon(item, "social__icon")
          .footer__data-content-col
            .footer__quote
              .footer__qote-text Всегда пишите код так, будто сопровождать его будет склонный к насилию психопат, который знает где вы живете
              .footer__qote-autor Martin Golding



