.hamburger-container {
    
    display: none;
    flex: 1;
    justify-content: end;

    @include tablets {
        display: flex;
    }
    @include phones {
      flex: 0;
    }
}


.hamburger {
    width: 30px;
    height: 28px;
    flex-direction: column;
    justify-content: space-between;
    z-index: 15;    
    display: inline-flex;
    
  }
  

  .hamburher__plank {
    display: block;
    background-color: #464E62;
    height: 5px;
  }